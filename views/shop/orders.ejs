<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (orders.length) { %>
        <div>

            <ul>
                <% orders.forEach(order => { %>

                <li>
                    <h1># <%= order.id %></h1>

                    <ul>
                        <% order.products.forEach( product => { %>
                        <li>
                            <%= product.title  %> (<%= product.orderItem.quantity %>)
                        </li>

                        <% }) %>
                    </ul>
                </li>
                <% }) %>
            </ul>
        </div>
        <% } else { %>
        <h1>Nothing there!</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>
